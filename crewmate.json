{
  "builders": [
    {
        "type": "docker",
        "image": "ubuntu:14.04.2",
        "commit": true,
        "pull": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "crewmate",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "only": ["docker"],
      "source": "supervisor",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/setup-base-system.sh",
        "scripts/install-crewmate.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["docker"],
      "scripts": [
        "scripts/install-supervisor.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],

  "post-processors": [
    {
    "type": "docker-tag",
    "only": ["docker"],
    "repository": "miurahr/crewmate",
    "tag": "latest"
    }
  ]

}
